#! /bin/sh
### BEGIN INIT INFO
# Provides:			xterminal_broker
# Required-Start:	$remote_fs $syslog
# Required-Stop:	$remote_fs $syslog
# Default-Start:	2 3 4 5
# Default-Stop:		0 1 6
# Short-Description: Execute the xterminal_broker command.
# Description:
### END INIT INFO

PATH=/sbin:/usr/sbin:/bin:/usr/bin

. /lib/lsb/init-functions

XTERMINALPID=/var/run/xterminal.pid

do_start () {
	start-stop-daemon --start --make-pidfile --pidfile $XTERMINALPID --background --exec /usr/sbin/xterminal_broker
}

do_stop () {
	start-stop-daemon --stop --pidfile $XTERMINALPID
	sleep 1
	rm -f $XTERMINALPID
}

case "$1" in
  start)
	do_start
	;;
  stop)
	do_stop
	;;
  restart|reload|force-reload)
	echo "Error: argument '$1' not supported" >&2
	exit 3
	;;
  status)
	exit 0
	;;
  *)
	echo "Usage: $0 start|stop" >&2
	exit 3
	;;
esac
